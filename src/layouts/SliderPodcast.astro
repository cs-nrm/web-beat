    background-blend-mode: soft-light;
    box-shadow: 0 0 20px 0 rgba(0, 0, 0, .5);
}
.carousel-cell img{
    box-shadow: none;
    -webkit-mask-image: linear-gradient(to bottom, hsla(var(--color-black), 1) 0, hsla(var(--color-black), 1) 70%, hsla(var(--color-black), 0) 100%);
