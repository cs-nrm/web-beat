---
import Layout from "../../layouts/Layout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { Tabs } from "astro-tabs";
/*import BarNrm from '../../components/BarNrm.astro';*/

const res = await fetch(
    "https://beatdigital.com.mx/wp-json/wp/v2/posts?_embed&per_page=80&_fields=title,content,acf,yoast_head_json&categories=515&filter[orderby]=acf[inicio]&order=asc",
);
const posts = await res.json();

posts.sort(function (a, b) {
    //return a.acf.hora_inicio < b.acf.hora_inicio;
    return a.acf.hora_inicio > b.acf.hora_inicio
        ? 1
        : a.acf.hora_inicio < b.acf.hora_inicio
          ? -1
          : 0;
});
---

<Layout title={SITE_TITLE} seccion="En Vivo" description={SITE_DESCRIPTION}>
    <!--BarNrm /-->

    <main id="envivo">
        <div class="mx-auto">
            <div class="md:flex md:flex-col lg:flex-row">
                <div class="banner-prog">
                    <img src="" />
                </div>
                <div class="info-envivo">
                    <div class="envivo-prog"></div>
                    <div class="envivo-loc"></div>
                    <div class="envivo-desc"></div>
                </div>
            </div>

            <div class="programas">
                <div class="prog-now">
                    <div class="envivo-title">
                        En vivo: <span class="envivo-now"></span>
                    </div>
                    <div class="envivo-prog-tab"></div>
                    <div class="envivo-loc-tab"></div>
                </div>

                <div class="prog-next">
                    <div class="siguiente-title">
                        Siguiente: <span class="envivo-next"></span>
                    </div>
                    <div class="envivo-prog-next-tab"></div>
                    <div class="envivo-loc-next-tab"></div>
                </div>

                <div class="prog-all">
                    <div class="link-playlist">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            width="28"
                            height="28"
                            stroke-width="1"
                        >
                            <path d="M14 17m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"
                            ></path>
                            <path d="M17 17v-13h4"></path>
                            <path d="M13 5h-10"></path>
                            <path d="M3 9l10 0"></path>
                            <path d="M9 13h-6"></path>
                        </svg>
                        <a href="/playlist"><span>Playlist</span></a>
                    </div>
                    <div class="link-programacion">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            width="28"
                            height="28"
                            stroke-width="1"
                        >
                            <path
                                d="M10.5 21h-4.5a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v3"
                            ></path>
                            <path d="M16 3v4"></path>
                            <path d="M8 3v4"></path>
                            <path d="M4 11h10"></path>
                            <path d="M18 18m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0"
                            ></path>
                            <path d="M18 16.5v1.5l.5 .5"></path>
                        </svg>
                        <a href="/programacion"><span>Programaci√≥n</span></a>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <style>
        .programas {
            display: flex;
            width: 100%;
        }
        .prog-now {
            width: 33%;
            padding: 20px;
            background: #201e1e;
            border-top-right-radius: 20px;
        }
        .prog-next {
            width: 33%;
            padding: 20px;
            border-right: 1px solid white;
        }
        .prog-all {
            width: 34%;
            padding: 20px;
            display: flex;
            gap: 25px;
            color: #adabab;
        }
        .prog-all div {
            display: flex;
            gap: 10px;
        }
        .prog-all a {
            color: #e94543;
        }
        .banner-prog {
            width: 75%;
            padding: 20px;
        }
        .banner-prog img {
            object-fit: cover;
            border-radius: 163%;
        }
        .envivo-prog {
            font-size: 2.5rem;
            color: #d6d8d7;
        }
        .envivo-prog-tab {
            color: #d6d8d7;
        }
        .envivo-prog-next-tab {
            color: #d6d8d7;
        }
        .info-envivo {
            padding: 40px;
        }
        .envivo-title,
        .siguiente-title {
            color: #e94543;
            font-weight: bold;
            font-size: 85%;
        }
        .envivo-title span,
        .siguiente-title span {
            color: #adabab;
            font-weight: normal;
        }

        @media (max-width: 768px) {
            .programas {
                display: block;
            }
            .banner-prog {
                width: 100%;
                justify-content: center;
                display: flex;
            }
            .banner-prog img {
            }
            .info-envivo {
                display: none;
            }
            .prog-now {
                width: 100%;
            }
            .prog-next {
                width: 100%;
            }
            .prog-all {
                width: 100%;
                padding: 20px;
                gap: 10px;
            }
            .prog-all div {
                width: 100%;
                padding: 10px;
                background: #201e1e;
                border-radius: 20px;
            }
            .volume {
                display: none !important;
            }
        }
    </style>
    <script>
        $(".logo-player img").attr("src", "/img/logo-beat.png");
        $("#big-play").removeClass("border-4");

        $(".like").on("click", function () {
            console.log("click");
            $(this).find("svg").css("fill", "#d6d8d7");
        });
    </script>
