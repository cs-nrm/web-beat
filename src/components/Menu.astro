button.radio-button {    display: flex;    align-items: center;    gap: 7px;      font-size: 15px;  color: #ffaa1f;}
.opacity-back {position: absolute;    top: 0;    left: 0;    backdrop-filter: brightness(60%) blur(16px);    width: 100%;    height: 100%;    z-index: -1;  }

nav ul {
	padding: 0;
  margin: 0;
	list-style: none;
	position: relative;
  overflow: visible;
}
	
nav ul li {
	display:inline-block;
}

nav a, .dd-menu, .dd-menu-2 {
	display:block;
	padding:0 7px;	
	color:#FFF;
	font-size:14px;
	text-decoration:none;
  position: relative;
  line-height: 1.2;
  overflow: visible;
  margin-bottom: 12px;
}
.dd-menu-2{
  color: var(--amarillo-beat);
  display: flex !important;
  align-items: center;
}

nav a:hover, dd-menu:hover { 
	background-color: #262626; 
}
nav a:checked, dd-menu:checked { 
	color: var(--amarillo-beat); 
}

/* Hide Dropdowns by Default */
nav ul ul {
	display: none;
	position: absolute; 
  backdrop-filter: brightness(60%) blur(16px);
  top: 20px;
  left: 0;
  overflow: visible;
  z-index: 2;
}
nav ul .dd-menu-2 ul {
  top: 30px;
  right: 0;
  left: auto;
  justify-content: space-around;
  justify-items: center;
}
	
/* Display Dropdowns on Hover */
nav ul li:hover > ul {
  display: inherit;
}
nav ul li.dd-menu-2:hover > ul {
	display:flex;
  justify-content: space-around;
  justify-items: center;
}
	
/* Fisrt Tier Dropdown */
nav ul ul li {
	width:150px;
	float:none;
	display:list-item;
	position: relative;
}
nav ul .dd-menu-2 ul li {
  text-align: center;
}

/* Second, Third and more Tiers	*/
nav ul ul ul li {
	position: relative;
	top:-60px; 
	left:170px;
}

	
/* Change this in order to change the Dropdown symbol */
li > a:after, .dd-menu:after, .dd-menu-2:after { content:  ' ▼'; font-size: 10px;}
li > a:only-child:after, li > .dd-menu:only-child:after { content: ''; }

.live-icon {
    display: inline-block;
    position: relative;
    top: calc(50% - 5px);
    background-color: var(--amarillo-beat);
    width: 10px;
    height: 10px;
    margin-right: 10px;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 50%;
    z-index: 1;
}
.live-icon:before {
    content: "";
    display: block;
    position: absolute;
    background-color: rgba(255, 170, 31, 0.6);
    width: 100%;
    height: 100%;
    border-radius: 50%;
    -webkit-animation: live 2s ease-in-out infinite;
    animation: live 2s ease-in-out infinite;
    z-index: -1;
}
@keyframes live {
  0% {
    transform: scale(1, 1);
  }
  100% {
    transform: scale(3.5, 3.5);
    background-color: rgba(255, 170, 31, 0);
  }
}

.active > a,
li.active > div,
li.active > span {
  background: #ffaa1d;
    color: black;
    transition: all 0.5s;
}
.active {
  font-weight: bold;
  transition: all 0.5s;
}

