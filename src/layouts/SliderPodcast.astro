    }
.container.cards{
	max-width: 100% !important;
}

.carousel-cell {
  width: 27%;
  margin-right: 40px;
  border-radius: 20px;
  padding: 10px;
  margin: auto;
  margin-top: 20px;
}
.carousel-cell .img-podcast {
    width: 100%;
    height: 180px;
	position: relative;
}

.carousel-cell .img-podcast svg{
    position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	margin: auto;
}


.carousel-cell img{
	border-radius: var(--border-radius);
	box-shadow: 0 2px 12px 7px rgba(0,0,0,0.4);
	width: 100%;
	height: 100%;
	object-fit: cover;
	object-position: top center;
}
p.text-podcast{
	display: -webkit-box;
	-webkit-margin-before: 0;
    margin-block-start: 0;
    -webkit-margin-after: 12px;
    margin-block-end: 12px;
    line-height: 1.2;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
.carousel-cell.is-selected {
  /*background: #ED2;*/
}

@media (max-width: 640px) {
  .carousel-cell {
	width: 40%;
  }
}
