---
import DoubleBox from '../components/DoubleBox.astro';
import BoxBanner from '../components/BoxBanner.astro';
import LeaderBoard from'../components/LeaderBoard.astro';
import SuperLeader from '../components/SuperLeader.astro';
import { Image } from 'astro:assets';


---

<div class="slider-buenfin">
	<div class="carousel carousel-buenfin cards">
			<div class="carousel-cell card" id="ad-slot201"></div>
			<div class="carousel-cell card" id="ad-slot202"></div>
			<div class="carousel-cell card" id="ad-slot203"></div>
			<div class="carousel-cell card" id="ad-slot204"></div>
	</div> 
</div>

<style>
.slider-buenfin{
	mask-image: linear-gradient(to right, hsla(var(--color-black), 0) 0, hsla(var(--color-black), 1) var(--page-padding-inline), hsla(var(--color-black), 1) calc(100% - var(--page-padding-inline)), hsla(var(--color-black), 0) 100%);
	mask-image: radial-gradient(circle, rgba(0,0,0,0) 0%, rgba(79,79,79,0) 51%, rgba(0,0,0,0.6488970588235294) 100%);
    mask-image: radial-gradient(ellipse 82% 200% at 49% 33%,black 39%,transparent 61%);
	mask-image: radial-gradient(ellipse 76% 226% at 50% 60%, black 56%, transparent 65%);
}
.carousel{
  /*background-color: #7cdada;*/
  padding: 1%;
  border-radius: 0.25rem;
  /*background-image: url("data:image/svg+xml,%3Csvg width='52' height='26' viewBox='0 0 52 26' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23cecece' fill-opacity='0.4'%3E%3Cpath d='M10 10c0-2.21-1.79-4-4-4-3.314 0-6-2.686-6-6h2c0 2.21 1.79 4 4 4 3.314 0 6 2.686 6 6 0 2.21 1.79 4 4 4 3.314 0 6 2.686 6 6 0 2.21 1.79 4 4 4v2c-3.314 0-6-2.686-6-6 0-2.21-1.79-4-4-4-3.314 0-6-2.686-6-6zm25.464-1.95l8.486 8.486-1.414 1.414-8.486-8.486 1.414-1.414z' /%3E%3C/g%3E%3C/g%3E%3C/svg%3E");*/
}
.carousel-main .carousel-cell img{
	box-shadow: 0 2px 10px 7px rgba(0,0,0,0.4);
}

.carousel-cell {
  width: 28%;
  height: auto;
  padding: 30px;
  justify-items: center;
}

.carousel-cell img{
	width: 500px;
	text-align: center;
	margin: 0 auto;
	border-radius: 0.5rem !important;
	margin-top: 0px;
	box-shadow: 0 0 6px 4px rgba(0,0,0,0.4);
}

.carousel.carousel-nav{
	/*background-color: #7a68bb;*/
	width: 100%;
	margin: 0 auto;
}
.carousel-nav .carousel-cell {
  height: 130px;
  width: 120px;
  padding: 10px 5px;
}

.carousel-nav .carousel-cell.is-nav-selected img{
  background: 	#c9018a;
  border-radius: 0.25rem;
  box-shadow: 0 0 0px #fff, 0 0 10px #06dbe5, 0 0 20px #eb2fc7, 0 0 50px #d52ab3;
  background-color: #343434;
  color: white;
}

.slider-buenfin .flickity-button {
  background: transparent;
}
.slider-buenfin .flickity-prev-next-button {
  width: 100px;
  height: 100px;
}
.slider-buenfin .flickity-button-icon {
  fill: #511d98;
}
.slider-buenfin .flickity-button:disabled {
  display: none;
}
.slider-buenfin .flickity-prev-next-button.previous {
  left: -40px;
}
.slider-buenfin .flickity-prev-next-button.next {
  right: -40px;
}
.slider-buenfin .flickity-prev-next-button.previous {
    left: 8% !important;
}

@media only screen and (max-width: 640px){
	.carousel-cell {
		width: 100%;
		height: auto;
	}
}
@media (min-width: 641px) and (max-width: 768px){
	.carousel-cell {
		width: 70%;
		height: auto;
	}
}
@media (min-width: 769px) and (max-width: 1024px){
	.carousel-cell {
		width: 45%;
		height: auto;
	}
}
@media (min-width: 1025px) and (max-width: 1280px){
	.carousel-cell {
		width: 35%;
		height: auto;
	}
}






</style>