button.radio-button {    display: flex;    align-items: center;    gap: 7px;      font-size: 17px;  color: #ffaa1f; font-weight: bold; text-transform: uppercase; padding-left: 25px;}
.opacity-back {position: absolute;    top: 0;    left: 0;    backdrop-filter: brightness(60%) blur(16px);    width: 100%;    height: 100%;    z-index: -1;  }

nav ul {
	padding: 0;
  margin: 0;
	list-style: none;
	position: relative;
  overflow: visible;
  display: flex;
  align-items: center;
}
	
nav ul li {
	display:inline-block;
}
nav ul li a{
  display: flex;
  align-items: center;
}

nav ul li a svg{
  margin-right: 5px;
}
nav a, .dd-menu {
	display:block;
	padding:0 10px;	
	color:#969696;
	font-size:17px;
	text-decoration:none;
  position: relative;
  line-height: 2.2;
  overflow: visible;
}

nav a:hover, dd-menu:hover { 
	background-color: #000000; 
}

/* Hide Dropdowns by Default */
nav ul ul {
	display: none;
	position: absolute; 
  backdrop-filter: brightness(60%) blur(16px);
  top: 25px;
  left: 0;
  overflow: visible;
}
	
/* Display Dropdowns on Hover */
nav ul li:hover > ul {
	display:inherit;
}
	
/* Fisrt Tier Dropdown */
nav ul ul li {
	width:150px;
	float:none;
	display:list-item;
	position: relative;
}

/* Second, Third and more Tiers	*/
nav ul ul ul li {
	position: relative;
	top:-60px; 
	left:170px;
}

	
/* Change this in order to change the Dropdown symbol */
li > a:after, .dd-menu:after { content:  ' ▼'; font-size: 10px;}
li > a:only-child:after, li > .dd-menu:only-child:after { content: ''; }

.live-icon {
    display: inline-block;
    position: relative;
    top: calc(50% - 5px);
    background-color: var(--amarillo-beat);
    width: 10px;
    height: 10px;
    margin-right: 10px;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 50%;
    z-index: 1;
}
.live-icon:before {
    content: "";
    display: block;
    position: absolute;
    background-color: rgba(255, 170, 31, 0.6);
    width: 100%;
    height: 100%;
    border-radius: 50%;
    -webkit-animation: live 2s ease-in-out infinite;
    animation: live 2s ease-in-out infinite;
    z-index: -1;
}
@keyframes live {
  0% {
    transform: scale(1, 1);
  }
  100% {
    transform: scale(3.5, 3.5);
    background-color: rgba(255, 170, 31, 0);
  }
}

@media (max-width: 768px) {
  nav a, .dd-menu{
    font-size: 15px;
  }
  .links-menu-radio{
    white-space: nowrap;
    overflow-x: scroll;
    -ms-overflow-style: none;  /* Internet Explorer 10+ */
    scrollbar-width: none;  /* Firefox */
  }
}
