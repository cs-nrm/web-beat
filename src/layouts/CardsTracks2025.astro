---
export interface Props {
    post: {
        id: number;
        imagePath: string;
        title: {
            rendered: string;
        };
        acf: {
            artista: string;
        };
        content: {
            rendered: string;
        };
        slug: string;
        categories: {};
        yoast_head_json: {
            og_image: [
                {
                    url: string;
                },
            ];
            article_published_time: string;
            author: string;
        };
    };
    index: number;
}

const { post } = Astro.props;
const { index } = Astro.props;
const ind = index + 1;

var url_seccion;
---

<div class="card w-full p-2 md:p-4 pb-4 content-video">
    <div
        class="overflow-hidden bg-black/50 text-white rounded-xl shadow-[0_35px_60px_-15px_rgba(255,255,255,0.3)]"
    >
        <!--div
            set:html={post.content.rendered}
            class="block h-auto w-full aspect-video"
        /-->
        <div class="flex items-center justify-between leading-tight p-2 md:p-4">
            <div>
                <h2
                    class="text-base text-white font-bold"
                    set:html={post.title.rendered}
                />
                <h3 class="text-sm text-gray-300" set:html={post.acf.artista} />
            </div>
            <div class="flex items-center gap-2">
                {
                    post.content.rendered && (
                        <div
                            class="play-video-float cursor-pointer hover:scale-110 transition-transform"
                            title="Ver Video"
                            data-video={post.content.rendered}
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="40"
                                height="40"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="white"
                                stroke-width="1"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <path d="M2 8a4 4 0 0 1 4 -4h12a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-12a4 4 0 0 1 -4 -4v-8z" />
                                <path d="M10 9l5 3l-5 3z" />
                            </svg>
                        </div>
                    )
                }
                <div class="voto-pop" data-voto-id={post.id}>
                    <div
                        class="like-tracks2025 cursor-pointer"
                        title="Votar"
                        data-song={post.title.rendered}
                        data-artist={post.acf.artista}
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="white"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            width="40"
                            height="40"
                            stroke-width="1"
                            ><path
                                d="M19.5 12.572l-7.5 7.428l-7.5 -7.428a5 5 0 1 1 7.5 -6.566a5 5 0 1 1 7.5 6.572"
                            ></path></svg
                        >
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
