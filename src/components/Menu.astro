<style>
.radio-link{
  position: relative;
}
.radio-link::before{
  content: '';
  display: inline-block;
  position: absolute;
  top:0;
  width: 100%;
  height: 60px;
  background-color: #1d1d1d;
}

@media (max-width: 1072px) {
  .main-logo{
    width: 70%;
    transition: all 0.5s;
  }
  .main-logo.compress-logo{
    width: 50%;
